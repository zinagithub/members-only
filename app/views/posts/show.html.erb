<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<% if logged_in?%>
	<p>
	  <strong>User:</strong>
	  <%= @post.user.name %>
	</p>
<% end %>	
<% if logged_in? && current_user.id ==  @post.user.id %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %> 
<%= link_to 'Back', posts_path %>
